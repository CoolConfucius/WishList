extends layout

block content
  .container
  h1= title
  a.btn.btn-primary(href='/products/addProduct') Add Product
  
  table.table.table-hover
    thead
      tr
        th Name
        th Description
        th Price
    tbody#productList
      each product in products
        tr(data-id=product._id)
          td= product.name
          td= product.description
          td= product.price
          
block scripts
  script(src='/js/main.js')
